- content_for :body_id do
  catalog

.container
  %ul.breadcrumbs
    %li
      = link_to 'All', products_path, class: 'productLink'
      -#%a{ href: '#' } All
      -#= params[:category]
    - splited_params = params[:category].to_s.split('/')
    - splited_params.each do |category|
      %li
        - index =  splited_params.find_index(category)
        - sub_path = splited_params.first(index+1).join('/')
        = link_to category, products_path({ category: sub_path }), class: 'productLink'

  .row.productsList{ 'data-equalizer' => 'product', 'data-equalize-by-row'=>"true" }
    - @categories.to_a.each_with_index do |category, index|
      .medium-3.columns.category-item{ 'data-equalizer-watch'=>"product" }
        .allSeriesContainer
          = link_to products_path({category: category.category_path}), class: 'productLink contentLink text-center' do
            = image_tag category.category_image ? category.category_image.category_image.url(:thumb) : '/system/missing.png'
            .categoryContainer
              .categoryName.contentDetails
                = category.category_name
              .categoryNumber.contentDetails

    - @products.to_a.each do |product|
      .medium-3.columns.category-item{ 'data-equalizer-watch'=>"product" }
        .image
          = image_tag category.category_image ? category.category_image.category_image.url(:thumb) : '/system/missing.png'
        .productDetails
          = link_to product_path(product) do
            .productTitle.floatLeft= product.product_name
            .productDesp= product.product_s_desc || 'No description'
            .price.regularPrice= product.product_price
